# yaml-diffs Environment Variables
# Copy this file to .env and update values as needed for local development
# Note: Railway deployments use their own environment variables set in the Railway dashboard

# ============================================================================
# API Server Configuration
# ============================================================================

# Port to bind the server to (Railway sets this automatically in production)
# Default: 8000
PORT=8000

# Host to bind the server to (required for Railway, do not change)
# Default: 0.0.0.0
HOST=0.0.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Application name
# Default: yaml-diffs API
APP_NAME=yaml-diffs API

# Application version
# Default: 0.1.0
APP_VERSION=0.1.0

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed CORS origins
# Empty = no CORS (most secure)
# For local development with frontend: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com,https://app.yourdomain.com
# WARNING: Never use * in production - this allows any website to make requests
# Default: "" (empty, no CORS)
CORS_ORIGINS=

# Allow credentials in CORS requests
# Default: true
CORS_ALLOW_CREDENTIALS=true

# Comma-separated list of allowed HTTP methods
# Default: * (all methods)
CORS_ALLOW_METHODS=*

# Comma-separated list of allowed headers
# Default: * (all headers)
CORS_ALLOW_HEADERS=*

# ============================================================================
# API Client Configuration
# ============================================================================

# Base URL for the yaml-diffs API
# For local development: http://localhost:8000
# For production: https://yaml-diffs.up.railway.app
# Default: http://localhost:8000
YAML_DIFFS_API_URL=https://yaml-diffs.up.railway.app

# Optional API key for authentication (if implemented in the future)
# Default: "" (empty, no authentication)
YAML_DIFFS_API_KEY=

# Request timeout in seconds
# Default: 30
YAML_DIFFS_API_TIMEOUT=30

# ============================================================================
# Railway Deployment (set automatically by Railway, do not override)
# ============================================================================

# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=
# RAILWAY_SERVICE_ID=
